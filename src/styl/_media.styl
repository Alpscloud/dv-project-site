// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1400px)
	// Services
	.services-additional__col
		.img-decor
			right -160px
	
	// Help
	.help__img
		margin-left 100px
			

+max-screen(1200px)
	// Services
	.services-additional__col
		padding-right 0
		.img-decor
			display none
			
	// Guarantee
	.sect__guarantee
		.container
			padding-left 0
			padding-right 0
	.guarantee
		&__block
			width 100%
			padding-top 0
			padding-right 0
			padding-bottom 0
		&__content
			padding-right 15px
			padding-left 15px
		&__information
			position relative
			left auto
			top auto
			width 100%
			padding 35px 15px
			margin-top 40px
			

+max-screen(1100px)
	// Header
	.header__nav
		margin-left 15px
	.nav
		margin-right 15px
		
		li
			margin-right 20px
			
	.logo
		font-size 12px
		max-width 260px
		span
			margin-left 10px
			
	// Promo
	.sect__promo
		min-height auto
		padding-top 80px
		
	.promo__content
		padding-right 60px
		
	// Services
	.sect__services
		&:before,
		&:after
			left -60%
		&-additional
			&:before
				left -55%
			&:after
				left -60%
				
	// Help
	.sect__help
		padding 80px 0 110px
				
+max-screen(1000px)
	// Header
	.header
		z-index 5
		&-mobile-info
			display block
		&-mobile-link
			display inline-block
		&__top
			display none
			
		&__row
			padding-right 80px
			
		&__nav
			position absolute
			top 0
			left 0
			width 100%
			z-index 5
			background-color $white-color
			margin-left 0
			padding-left 15px
			padding-right 15px
			// min-height 100vh
			padding-bottom 80px
			display none
			flex none
			.row
				flex-wrap wrap
				flex-direction column
				align-items flex-start
			
			.header__contacts
				background-color transparent
				order 1
				padding-left 0
				padding-right 0
				
			.nav
				order 2
				width 100%
				margin-right 0
				background-color #fff
				>
					ul
						margin-left -15px
						margin-right -15px
				li
					display block
					margin-right 0
					text-align left
					padding 15px
					border-bottom 1px solid #E9E9E9
					&:first-child
						border-top 1px solid #E9E9E9
				

			.menu-item-has-children
				background-color $alternate-color-bg 
				> a
					padding-right 0
					&:after
						display none
				&:hover
					.sublist
						margin-top 10px
				
			.sublist
				position relative
				top auto
				right auto
				width 100%
				margin-top 10px
				opacity 1
				visibility visible
				box-shadow none
				border none
				background-color  $alternate-color-bg 
				a
					color $accent-color
				li
					border none !important
					padding-left 15px
					padding-top 0
					padding-bottom 0
					margin-bottom 12px
					&:last-child
						margin-bottom 0
				&:before
					display none
	.phone-link
		font-size 14px
		
		&:before
			width 15px
			height 15px
			background-size 15px 15px
			
	.logo
		display inline-block
		max-width none
		span
			display none
			
	.btn__hamburger
		display inline-block
		
	// Services
	.sect__services
		padding 80px 0 55px
		&:before,
		&:after
			left 0
		&-additional
			padding 0
			&:before,
			&:after
				display none
			
			
	.title__col
		max-width 100%
		
		margin-bottom 30px
	.services__col
		max-width 100%
		padding 0
		
	.services
		&__row,
		&-additonal__row
			flex-wrap wrap
		
	.service
		&__item
			color $white-color
			
	
	.sect__services-additional
		.container
			padding-left 0
			padding-right 0
			
	.services-additional
		&__col
			padding 40px 15px
			max-width 100%
			width 100%
			
	.services-additional__row
		.title__col
			max-width 100%
			margin-bottom 0
			padding 30px 15px
			background $accent-color url('../img/backgrounds/pattern-bg.png') 50% 50% no-repeat / cover
	
		
	// Help
	.help
		&__block
			max-width 100%
			&--content
				max-width 540px
		&__img
			left auto
			right 0
			width 370px
			height 250px
		

+max-screen(900px)
	// Promo
		

		
	.promo
		&__row
			flex-wrap wrap
		&__content
			width 100%
			padding-right 0
			margin-bottom 50px
			
		&__video
			width 100%
			

+max-screen(620px)
	body
		font-size 14px
	// Promo
	.sect__promo
		padding 35px 0
		
	.promo__img
		display none
		
	.title
		font-size 24px
	
	.subtitle
		margin-bottom 10px
		
	.commercial-proposal
		&__text
			margin-bottom 30px
			
	.promo
		&__content
			margin-bottom 25px
		&__video
			&--wrapper
				margin-bottom 25px
			&--notice
				font-size 12px
				line-height 18px
				max-width 240px
				text-align left
				&:before
					vertical-center()
					

	// Services
	.sect__services
		padding 35px 0 15px
	.sect__title,
	.sect__title--lg
		font-size 24px
		line-height 125%

	.service
		&__item
			font-size 14px
			line-height 18px
			&--wrapper
				padding 0 6px 20px 6px
			&--ic
				width 55px
				height 55px
				background-size 55px 55px
				&-block
					width 70px
					height 70px
					margin-bottom 20px
					
	.services__row
		margin-left -6px
		margin-right -6px
		
	.services-additional
		&__col
			padding 35px 15px
	

	.alarm-content
		font-size 16px
		line-height 150%
		
		ul
			li
				font-size 14px
				

	// Help
	
	.sect__help
		padding 35px 0
		
	.help
		&__block
			&--content
				text-align center
				max-width 100%
				p
					font-size 14px
					line-height 129%
					margin-bottom 25px
		&__contacts
			margin-left 0
			margin-top 15px
			span
				display none
			&--row
				flex-direction column
				align-items center
		
		&__img
			width 220px
			height 150px
			top auto
			transform none
			bottom -10px
			right -50px
			
	.sect__title--gutter
		margin-bottom 15px
		

	// Guarantee
	.guarantee
		&__block
			img
				max-width 200px
		&__information
			&--title
				font-size 24px
				line-height 30px
				margin-bottom 20px
				
			&--item
				h5
					font-size 16px
				&-ic
					width 45px
					height 45px
					background-size 45px 45px
					margin-right 30px
			
+max-screen(440px)
	.btn
		width 100%
		font-size 14px
		&__search
			padding-top 11px
			padding-bottom 11px
		
	// Promo
	.sect__promo
		padding-bottom 80px
	.promo__video--wrapper
		height 180px
		
		
			
