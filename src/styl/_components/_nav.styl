.nav
	flex 1
	margin-right 25px
	text-align center
	li
		display inline-block
		margin-right 35px
		&:last-child
			margin-right 0
			
		&:hover
			>
				a
					color $accent-color
			
	a
		display inline-block
		color $dark-color
		font-size 14px
		&:hover
			color $accent-color
			

	.menu-item-has-children
		> a
			position relative
			padding-right 10px
			
			&:after
				pseudo()
				position absolute
				right 0
				vertical-center()
				width 6px
				height 6px
				background url('../img/icons/svg/nav-link-arrow.svg') 50% 50% no-repeat / 6px 6px
				
		&:hover
			.sub-menu
				opacity 1
				visibility visible
				margin-top 0
			

.sub-menu
	position absolute
	top 100%
	right 0
	background-color $white-color
	z-index 5
	width 100%
	transition all .1s ease-in-out
	opacity 0
	visibility hidden
	margin-top 25px
	display flex
	flex-wrap wrap
	justify-content flex-start
	&:before
		pseudo()
		position absolute
		bottom 100%
		margin-bottom -1px
		width 100%
		height 22px
	li
		display flex
		align-items center
		flex-wrap nowrap
		width 20%
		position relative
		margin 0
		span
			padding 0 !important
		&:hover
			a
				background-color $accent-color
				color $white-color
			img
				filter brightness(0) invert(1)
					
		img
			position absolute
			vertical-center()
			width 50px !important
			height 50px !important
			opacity 1 !important
			visibility visible !important
			left 25px
			pointer-events none
			transition filter .17s ease-in-out
		

		
		
	a
		width 100%
		color $dark-color
		font-size 14px
		display flex
		align-items center
		padding 25px 5px 25px 90px
		text-align left
		height 100%
		


.header__row
	position relative
	
		
