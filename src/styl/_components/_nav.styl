.nav
	flex 1
	margin-right 25px
	text-align center
	li
		display inline-block
		position relative
		margin-right 35px
		&:last-child
			margin-right 0
			
		&:hover
			>
				a
					color $accent-color
			
	a
		display inline-block
		color $dark-color
		font-size 14px
		&:hover
			color $accent-color
			

	.menu-item-has-children
		> a
			position relative
			padding-right 10px
			
			&:after
				pseudo()
				position absolute
				right 0
				vertical-center()
				width 6px
				height 6px
				background url('../img/icons/svg/nav-link-arrow.svg') 50% 50% no-repeat / 6px 6px
				
		&:hover
			.sub-menu
				opacity 1
				visibility visible
				margin-top 0
			

.sub-menu
	position absolute
	top 100%
	right 0
	background-color $white-color
	z-index 5
	border 1px solid #d1d1d1
	width 200px
	box-shadow 0 0 3px 3px rgba($dark-color, .05)
	transition all .1s ease-in-out
	opacity 0
	visibility hidden
	margin-top 25px
	li
		display block
		padding 5px 10px
		margin-right 0
		text-align right
		&:last-child
			border-bottom none
		
	a
		color $dark-color
		font-size 14px
		
	
		
