.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
	&__pagination
		margin-top 60px
		text-align center
		white-space nowrap
		
		.swiper-pagination
			&-bullet
				width 25px
				height 25px
				background-color transparent
				outline none
				opacity 1
				border-radius 0
				margin-right 25px
				border 6px solid #B6B6B6
				&:last-child
					margin-right 0
				&-active
					border-color $accent-color
					background-color $accent-color
			
	&__btn
		display inline-block
		width 50px
		height 80px
		position absolute
		vertical-center()
		z-index 2
		background-color rgba($dark-color, .6)
		&--prev
			left 0
		&--next
			right 0
		svg
			display block
			width 19px
			height 35px
			fill $accent-color !important
			position absolute
			position-center()
			path
				fill inherit !important
		&:hover
			background-color rgba($dark-color, 1)
			
		&.is-disabled
			opacity 0
			visibility hidden
			
		&--arrow
			display inline-block
			margin-right 36px
			width 25px
			height 20px
			svg
				display block
				width 100%
				height 100%
				fill #969696
				transition fill .17s ease-in-out
				
			&:hover
				svg
					fill $accent-color
			&:last-child
				margin-right 0
				
			&.is-disabled
				opacity 0
				visibility hidden
				
		&--transparent
			background-color transparent
			svg
				fill $accent-color !important
			&:hover
				background-color rgba($dark-color, .15)
			


.portfolio
	&__slider
		position relative
		*
			box-sizing border-box
		&--desktop
			margin-top 60px
		&--mobile
			display none
			margin-top 40px
			.swiper-slide
				width 230px
				padding-left 5px
				padding-right 5px
			&-navigation
				margin-top 25px
	&__slide
		display flex
		flex-wrap nowrap
		height 780px
		.project__card
			width 100%
		&--col
			&:first-child
				flex 1
				display flex
				flex-wrap wrap
				
				.project__card
					width 50%
					height 50%
					padding-bottom 100px
					&:first-child
						width 100%
						
			.project__card
				
				&:first-child
					.project__card--title
						font-size 36px
			&:last-child
				width 360px
				flex none
				.project__card
					height 100%
					
		&--mobile
			height 220px
			width 100%
			
			.project__card
				padding 20px 20px 30px 20px
				
				&--title
					font-size 15px !important
					line-height 120%
					margin-bottom 10px
					
				&--link
					font-size 14px !important
					

.licenses__slider
	*
		box-sizing border-box
	&--navigation
			margin-top 45px
	
.license
	&__slide
		text-align center
		font 16px $Reg
		color $light-text-color
		

.feedbacks__slider
