.btn
	display inline-block
	padding 11px 20px
	position relative
	transition all .17s ease-in-out
	backface-visibility hidden
	font 16px $Reg
	line-height 19px
	background-color $accent-color
	border-radius 9px
	text-align left
	color $light-color
	&-with-img
		padding-left 100px
	&__img
		display block
		width 90px
		height 80px
		position absolute
		left 0
		vertical-center()
		z-index 1
	
	&:hover
		background-color darken($accent-color, 10%)
	&-close
		display inline-block
		width 20px
		height 20px
		background url('../img/icons/svg/close-ic.svg') center center no-repeat
		background-size 20px 20px

	&-top
		display none
		border-radius 50%
		width 40px
		height 40px
		position fixed
		right 30px
		bottom 30px
		background-color $accent-color
		z-index 10
		text-align center
		transition all .17s ease-in-out
		box-shadow 0px 0px 13px 0px rgba($dark-color, 0.21)
		&:after
			content ''
			display inline-block
			position absolute
			top 15px
			left 10px
			width 20px
			height 20px
			transform rotate(-45deg)
			border-top 1px solid $dark-color
			border-right 1px solid $dark-color
			transition all .23s ease-in-out
		&:hover
			background-color $dark-color
			transform scale(1.1)
			box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
			&:after
				border-top 1px solid $accent-color
				border-right 1px solid $accent-color
		

	&__hamburger
		display none
		flex none
		width 63px
		height 63px
		background-color #3A3939
		transition background-color .17s ease-in-out
		position absolute
		right 15px
		top 0
		z-index 6
		&--line
			width 27px
			height 2px
			background-color $light-color
			display block
			margin 6px auto
			transition all 0.3s ease-in-out	
		&.is-active
			background-color $accent-color
			.btn__hamburger--line
				&:nth-child(1)
					transform translateY(8px) rotate(45deg)
				&:nth-child(2)
					opacity 0	
				&:nth-child(3)
					transform translateY(-8px) rotate(-45deg)
		