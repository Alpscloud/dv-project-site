.breadcrumbs
	margin-bottom 60px
	&__item
		display inline-block
		margin-right 31px
		position relative
		&:before
			content '>'
			color $accent-color
			position absolute
			left 100%
			margin-left 15px
		&:last-child
			margin-right 0
			&:before
				display none
	&__link
		color $accent-color
		font-size 14px
		&.is-active
			color $light-text-color