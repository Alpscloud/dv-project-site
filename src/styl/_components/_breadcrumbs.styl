.breadcrumbs
	margin-bottom 60px
	&__item
		display inline-block
		margin-right 31px
		position relative
		&:before
			content '>'
			color $accent-color
			position absolute
			left 100%
			margin-left 15px
		&:last-child
			margin-right 0
			&:before
				display none
	&__link
		color $accent-color
		font-size 14px
		&.is-active
			color $light-text-color
			
	&-absolute
		position absolute
		top 25px
		left 0
		z-index 1
		width 100%
		.breadcrumbs__link
			&.is-active
				color $lighter-text-color
				
	&-light
		.breadcrumbs
			&__item
				&:before
					color $white-color
			&__link
				color $white-color
				&.is-active
					color $lighter-text-color