.popup 
	position fixed
	position-center()
	z-index 90
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 100px 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		max-width 460px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
	
	&__content
		
		display inline-block
	
	&__title
		font 45px $Light
		margin-bottom 30px
		
	.btn__close
		position absolute
		bottom 100%
		margin-bottom 25px
		right 0
		

.popup-with-img
	.popup__body
		width 100%
		max-width 945px
		
	.form__block
		max-width 360px
		box-shadow none
		padding 0
		border-radius 0
		
	.btn
		text-align center
		
	.popup__content
		width 100%
		position relative
		padding 40px 50px 50px
		background-color $white-color
		position relative
		z-index 1
		border-radius 15px
		box-shadow 0px 25px 55px rgba(0, 0, 0, 0.45)
		padding 40px 50px 50px 50px
		
		&--title
			font 18px $Bold
			line-height 144%
			margin-bottom 13px
			text-align center
		img
			display block
			position absolute
			right 0
			height 100%
			top 0
			width auto
			



