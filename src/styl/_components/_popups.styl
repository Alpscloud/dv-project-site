.popup 
	position fixed
	position-center()
	z-index 90
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 100px 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
	
		display inline-block
		vertical-align middle
		position relative
		white-space normal
	
	&__content
		max-width 460px
		display inline-block
	
	&__title
		font 45px $Light
		margin-bottom 30px
		
	.btn__close
		position absolute
		bottom 100%
		margin-bottom 25px
		right 0

