// Page parent services
.sect__promo-services
	position relative
	padding-top 175px
	&:before
		pseudo()
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		background-color rgba(0,0,0, .75)
	
	.container
		position relative
		z-index 2
		
	.title
		color $white-color
		margin-bottom 0
		span
			font-size 24px

.sect__promo
	&-service
		background-position top center
		padding-top 25px
		.breadcrumbs
			margin-bottom 100px

.subservice-card
	display flex
	align-items flex-end
	width 100%
	height 100%
	min-height 410px
	padding 30px 30px 40px 30px
	position relative
	overflow hidden
	color $white-color
	&:before
		pseudo()
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(0,0,0, .45)
		transition background-color .17s ease-in-out
	&__content
		position relative
		z-index 1
	&__title
		color $white-color
		font 36px $Reg
		line-height 1
		span
			font-size 24px
		a
			color inherit
			
	&__notice
		margin-top 12px
			
	.permalink
		color $white-color
		margin-top 20px
		display inline-block
	
	&:hover
		&:before
			background-color rgba(0,0,0, .75)
	
	&__wrapper
		width 33.3333%
		padding 15px
		

.title-skdu
	strong, b
		font-size 30px
	span
		font-size 20px
		line-height 1
		
.sect__skdu-advantages
	background url('../img/backgrounds/skud-adv-bg.svg') 50% 50% no-repeat / cover
	padding-bottom 60px
	
.sect__subtext
	color $light-text-color
	margin 10px auto 60px
	max-width 790px
	

.skdu-advantage
	font-size 18px
	line-height 30px
	margin 0 auto
	text-align center
	
	&__ic
		display block
		position relative
		margin 0 auto 25px auto
		width 100px
		height 100px
		border-radius 50%
		background-color rgba(206, 206, 206, 0.15)
		background-size 0 0
		&:before
			pseudo()
			position absolute
			width 65px
			height 65px
			background-size cover
			background-repeat no-repeat
			background-image inherit
			left 0
			vertical-center()
			z-index -1
	&__wrapper
		width 33.3333%
		padding 0 15px 70px 
		

.skdu-help
	margin 0
	width 33.3333%
	.our-experience
		text-align left
		font-size 16px
		h3
			font 20px $Bold
			line-height 26px
		.our-experience__ic
			margin 0
			margin-bottom 25px
			

.sect__skdu-offer
	padding 110px 0
	background-color #222222 
	position relative

	&:before
		pseudo()
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background url('../img/backgrounds/pattern-full-bg.png') 50% 50% no-repeat / cover
		z-index 1
		opacity .07
	
	.container
		position relative
		z-index 2
	
.skdu-offer
	position relative
	max-width 555px
	.sect__title
		margin-bottom 11px
		
	p
		margin-bottom 30px
		font-size 16px
		
	img
		display block
		position absolute
		left 100%
		margin-left 125px
		width 600px
		vertical-center()
		z-index 2


.sect__guarantee-skdu
	&:before
		background-image url('../img/backgrounds/skdu-adv-bg.svg')
		
	.advantages__content
		display flex
		flex-direction column
		justify-content center
		p
			font-size 24px
			line-height 40px
			
.skdu-guarantee__item
	margin-bottom 50px
	display flex
	align-items flex-start
	justify-content flex-start
	font-size 16px
	h3
		font 20px $Bold
		margin-bottom 6px
	&--ic
		display block
		width 70px
		height 70px
		background-position 50% 50%
		background-repeat no-repeat
		background-size contain
		flex none
		margin-right 45px
	&:last-child
		margin-bottom 0
	
		
			

