// Page parent services
.sect__promo-services
	position relative
	padding-top 175px
	&:before
		pseudo()
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		background-color rgba(0,0,0, .75)
	
	.container
		position relative
		z-index 2
		
	.title
		color $white-color
		margin-bottom 0
		span
			font-size 24px

.sect__promo
	&-service
		background-position top center
		padding-top 25px
		.breadcrumbs
			margin-bottom 100px

.subservice-card
	display flex
	align-items flex-end
	width 100%
	height 100%
	min-height 410px
	padding 30px 30px 40px 30px
	position relative
	overflow hidden
	color $white-color
	&:before
		pseudo()
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(0,0,0, .45)
		transition background-color .17s ease-in-out
	&__content
		position relative
		z-index 1
	&__title
		color $white-color
		font 36px $Reg
		line-height 1
		span
			font-size 24px
		a
			color inherit
			
	&__notice
		margin-top 12px
			
	.permalink
		color $white-color
		margin-top 20px
		display inline-block
	
	&:hover
		&:before
			background-color rgba(0,0,0, .75)
	
	&__wrapper
		width 33.3333%
		padding 15px
		

.title-skdu
	strong, b
		font-size 30px
	span
		font-size 20px
		line-height 1
		
.sect__skdu-advantages
	background url('../img/backgrounds/skud-adv-bg.svg') 50% 50% no-repeat / cover
	padding-bottom 60px
	
.sect__subtext
	color $light-text-color
	margin 10px auto 60px
	max-width 790px
	

.skdu-advantage
	font-size 18px
	line-height 30px
	margin 0 auto
	text-align center
	
	&__ic
		display block
		position relative
		margin 0 auto 25px auto
		width 100px
		height 100px
		border-radius 50%
		background-color rgba(206, 206, 206, 0.15)
		background-repeat no-repeat
		background-size 0 0
		&:before
			pseudo()
			position absolute
			width 65px
			height 65px
			background-size contain
			background-repeat no-repeat
			background-image inherit
			background-position 50% 50%
			left 0
			vertical-center()
			z-index -1
	&__wrapper
		width 33.3333%
		padding 0 15px 70px 
		

.skdu-help
	margin 0
	width 33.3333%
	.our-experience
		text-align left
		font-size 16px
		h3
			font 20px $Bold
			line-height 26px
		.our-experience__ic
			margin 0
			margin-bottom 25px
			

.sect__skdu-offer
	padding 110px 0
	background-color #222222 
	position relative

	&:before
		pseudo()
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background url('../img/backgrounds/pattern-full-bg.png') 50% 50% no-repeat / cover
		z-index 1
		opacity .07
	
	.container
		position relative
		z-index 2
	
.skdu-offer
	position relative
	max-width 555px
	.sect__title
		margin-bottom 11px
		
	p
		margin-bottom 30px
		font-size 16px
		
	img
		display block
		position absolute
		left 100%
		margin-left 125px
		width 600px
		vertical-center()
		z-index 2


.sect__guarantee-skdu
	&:before
		background-image url('../img/backgrounds/skdu-adv-bg.svg')
		
	.advantages__content
		display flex
		flex-direction column
		justify-content center
		p
			font-size 24px
			line-height 40px
			
.skdu-guarantee__item
	margin-bottom 50px
	display flex
	align-items flex-start
	justify-content flex-start
	font-size 16px
	h3
		font 20px $Bold
		margin-bottom 6px
	&--ic
		display block
		width 70px
		height 70px
		background-position 50% 50%
		background-repeat no-repeat
		background-size contain
		flex none
		margin-right 45px
	&:last-child
		margin-bottom 0
		
// Proektirovanie
.decor-list-check
	ul
		li
			&:before
				background-image url('../img/icons/svg/check.svg')
			
.commercial-proposal
	.decor-list
		margin-bottom 45px
		

.sect__promo-design
	position relative
	padding-top 25px
	&:before
		pseudo()
		position absolute
		top 0
		height 100%
		right 0
		width 490px
		background $accent-color url('../img/backgrounds/pattern-bg.png') 50% 50% no-repeat / cover
		
	.container
		position relative
		z-index 2
		
	.promo__content
		position relative
		
.promo-design__img
	position absolute
	vertical-center()
	left 100%
	width 660px
	img
		display block	


.sect__our-experience--dark
	background #222 url('../img/backgrounds/exp-dark-decor.jpg') 50% 50% no-repeat / cover
	&:before
		display none


.sect__services-additional
	.title__col
		h2
			max-width 330px
			

.design-advantage
	p
		max-width 330px
	&__title
		position relative
		padding-left 30px
		font 20px $Med
		line-height 30px
		margin-bottom 11px
		background url('../img/icons/svg/list-arrow.svg') no-repeat top 5px left /20px 20px
	&__wrapper
		margin-bottom 60px




.sect__documents-reverse
	&:before
		left auto
		right 0

	.documents__img
		left 100%
		margin-left 45px
		margin-right 0
		


.sect__information
	position relative
	&:before
		pseudo()
		z-index -1
		position absolute
		right 40px
		bottom 40px
		width 160px
		height 160px
		background url('../img/icons/sect-arrow.png') no-repeat
.information
	&-content
		max-width 940px
	&-notice
		position relative
		text-transform uppercase
		color $accent-color
		font-family $Bold
		margin-bottom 15px
		padding-left 45px
		&:after
			pseudo()
			position absolute
			vertical-center()
			width 30px
			height 30px
			background url('../img/icons/svg/info.svg') 50% 50% no-repeat / contain
			left 0
		&:before
			pseudo()
			position absolute
			z-index -1
			vertical-center()
			left -90px
			width 215px
			height 215px
			background url('../img/circle.svg') 50% 50% no-repeat / contain



.col-w-20
	width 20%
	
.col-w-33
	width 33.333333%
	width calc(100% / 3)
	
.col-gutters
	padding 0 15px
	
.row-gutters
	margin-left -15px
	margin-right -15px
	

		
			

