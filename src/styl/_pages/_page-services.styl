// Page parent services
.sect__promo-services
	position relative
	padding-top 175px
	&:before
		pseudo()
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		background-color rgba(0,0,0, .75)
	
	.container
		position relative
		z-index 2
		
	.title
		color $white-color
		margin-bottom 0
		span
			font-size 24px

.sect__promo
	&-service
		background-position top center
		padding-top 25px
		.breadcrumbs
			margin-bottom 100px

.subservice-card
	display flex
	align-items flex-end
	width 100%
	height 100%
	min-height 410px
	padding 30px 30px 40px 30px
	position relative
	overflow hidden
	color $white-color
	&:before
		pseudo()
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(0,0,0, .45)
		transition background-color .17s ease-in-out
	&__content
		position relative
		z-index 1
	&__title
		color $white-color
		font 36px $Reg
		line-height 1
		span
			font-size 24px
		a
			color inherit
			
	&__notice
		margin-top 12px
			
	.permalink
		color $white-color
		margin-top 20px
		display inline-block
	
	&:hover
		&:before
			background-color rgba(0,0,0, .75)
	
	&__wrapper
		width 33.3333%
		padding 15px
			

