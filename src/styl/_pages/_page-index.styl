			text-decoration none

// Sect form
.sect__form
	padding 100px 0
	position relative
	overflow hidden
	&:after
		pseudo()
		position absolute
		height 100%
		right 0
		top 0
		width 510px
		background url('../img/backgrounds/sect-form-bg.jpg') 50% 50% no-repeat / cover
	
	.container
		position relative
		z-index 1
	
.contacts
	
	&__block
		max-width 430px
		position relative
		z-index 4
		
		p
			margin-bottom 25px
			
	&-half
		width 50%
		padding-right 150px
		max-width 50%
	&__row
		margin-bottom 20px
		&:last-child
			margin-bottom 0
			
	&__link
		position relative
