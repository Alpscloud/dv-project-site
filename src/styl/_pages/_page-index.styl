		.contacts__link
			color $white-color
			&--ic
				svg
					fill $white-color
					
			&:hover
				opacity .7
				

.form
	&__wrapper
		position relative
		width 460px
	&__img
		position absolute
		vertical-center()
		left -380px
		width 616px
		height 538px
		img 
			display block
			width 100%
			height auto
	
	&__block
