// Protfilio
.sect__portfolio
	background $alternate-color-bg url('../img/backgrounds/pattern-full-bg.png') 50% 50% no-repeat / cover
	

.project__card
	position relative
	display flex
	align-items flex-end
	overflow hidden
	padding 45px 35px
	color $white-color
	backface-visibility hidden
	&:before
		pseudo()
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(30, 30, 30, .45)
		z-index 1
	&--content
		display block
		position relative
		z-index 2
	&--title
		font 24px $Light
		line-height 125%
		margin-bottom 15px
		display block
		
	&--link
		font 20px $Reg
		line-height 1
		text-decoration underline
		&:hover
			text-decoration none
	&--thumbnail
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		will-change transform
		transition transform .17s ease-in-out
		z-index -1
	&--preview
		display block
		margin-bottom 15px
	
		
	&:hover
		.project__card--thumbnail
			transform scale(1.025, 1.025)
			

.license
	text-align center
	display block
	

.sect__our-experience
	padding 125px 0 65px
	
	.sect__title
		margin-bottom 50px
		

	
