		height 65px
		background-position 50% 50%
		background-repeat no-repeat
		background-size contain
		margin 0 auto 25px auto
	&__col
		padding 0 15px 60px
		width 25%

.problems__block
	padding 140px 0
	max-width 650px
	position relative
	.sect__title
		margin-bottom 30px
	p
		margin-bottom 35px
		max-width 550px
		color $light-text-color
		
	img
		display block
		position absolute
		bottom -140px
		left 100%
		width 800px
		max-width none
		z-index -1



		
	
// Clients
.clients
	margin-top 70px
	&__title--col
		width 330px
		flex none
		
	&__logos
		flex 1
		flex-wrap wrap
		display flex
		justify-content flex-start
		align-items center
		margin-left -5px
		margin-right -5px
		
.client	
	&__logo
		flex 1 0 auto
		padding 5px
		transition opacity .17s ease-in-out
		opacity .6
		&:hover
			opacity 1
		img
			@extends .content-img
			
// Feedbacls
.sect__feedbacks,
.sect__contacts,
.sect__our-experience
	background-color $accent-color 
	position relative
	overflow hidden
	.container
		position relative
		z-index 1
	&:before
		pseudo()
		position absolute
		top 0
		left 0
		width 100%
