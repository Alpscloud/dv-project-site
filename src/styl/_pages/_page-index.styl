// Guarantee
.sect__guarantee
	position relative
	z-index 1
.guarantee
	&__block
		position relative
		width 500px
		padding-right 130px
		padding-top 75px
		padding-bottom 120px
		
		
		img
			display block
			max-width 270px
			margin-bottom 20px
			
		p
