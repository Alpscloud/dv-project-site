// Promo
.sect__promo
	min-height 640px
	padding 130px 0 90px
	
.title
	font 36px $Light
	line-height 125%
	margin-bottom 12px
	
.subtitle
	margin-bottom 22px
	

.promo
	position relative
	&__img
		position absolute
		left 0
		top -180px
		left -220px
		pointer-events none
		
	&__content
		width 55%
		padding-right 130px
	&__video
		width 45%
		text-align center
		&--wrapper
			width 100%
			height 340px
			box-shadow -15px 40px 55px rgba(0, 0, 0, 0.4)
			margin-bottom 60px
			iframe
				display block
				width 100%
				height 100%
				object-fit cover
				
		&--notice
			display inline-block
			position relative
			font-family $Italic
			padding-left 50px
			&:before
				pseudo()
				position absolute
				width 60px
				height 60px
				bg-img('../img/notice-arrow.svg', 60px, 60px)
				left 0
				top -45px
				
.commercial-proposal
	&__text
		font-family $Italic
		margin-bottom 35px
		line-height 19px