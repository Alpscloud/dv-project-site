// Promo
.sect__promo
	min-height 640px
	padding 130px 0 90px
	
.title
	font 36px $Light
	line-height 125%
	margin-bottom 32px
	
.subtitle
	margin-bottom 10px
	font-size 20px
	line-height 30px
	

.promo
	position relative
	&__img
		position absolute
		left 0
		top -180px
		left -220px
		pointer-events none
		
		
	&__content
		width 55%
		padding-right 50px
		position relative
		z-index 1
	&__video
		flex 1
		max-width 560px
		text-align center
		&--wrapper
			width 100%
			height 340px
			box-shadow -15px 40px 55px rgba(0, 0, 0, 0.4)
			margin-bottom 60px
			iframe
				display block
				width 100%
				height 100%
				
		&--notice
			display inline-block
			position relative
			font-family $Italic
			padding-left 50px
			&:before
				pseudo()
				position absolute
				width 60px
				height 60px
				bg-img('../img/notice-arrow.svg', 60px, 60px)
				left 0
				top -45px
				

				
.commercial-proposal
	&__text
		font-family $Italic
		margin-bottom 35px
		line-height 19px
		
.promo-offer
	background-color $accent-color
	
	&__content
		position relative
		padding 43px 0 56px
		
		.sect__title
			max-width 830px
			z-index 1
			span
				color inherit
				font 24px $Reg
				
		img
			display block
			position absolute
			right -100px
			bottom -2px
			width auto
			max-width 570px
		
// Services
.sect__services,
.sect__benefits
	position relative
	background-size 0 0
	overflow hidden
	&:before
		pseudo()
		position absolute
		top 0
		left -55%
		width 100%
		height 100%
		background-image inherit
		background-size cover
		background-position right center
		z-index 1
	&:after
		pseudo()
		position absolute
		top 0
		left -55%
		width 100%
		height 100%
		background-color rgba(#0C0C0C, 1)
	.container
		position relative
		z-index 1
	
.title__col
	max-width 400px

.services
	&__row
		margin-left -17.5px
		margin-right -17.5px
	&__col
		padding-top 55px
		padding-bottom 95px
		max-width 560px
.service
	&__item
		font-size 24px
		line-height 125%
		text-align center
		&--ic
			display block
			position absolute
			left 0
			bottom 0
			width 70px
			height 70px
			background-position 50% 50%
