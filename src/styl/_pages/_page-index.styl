		position relative
		z-index 1
		border-radius 15px
		box-shadow 0px 25px 55px rgba(0, 0, 0, 0.45)
		padding 40px 50px 50px 50px
		
		&--title
			font 18px $Bold
			line-height 144%
			margin-bottom 13px
			text-align center
// Faq

.sect__faq
	overflow hidden
	
	.container
		position relative
		z-index 2

.faq
	margin-top 55px
	padding-left 100px
	padding-right 100px
	
	.img-decor
		&-top
			right -260px
			top -270px
			width 325px
			height 413px
		&-bottom
			right 100%
			width 220px
			height 220px
			bottom -125px
			
	&__items
		position relative
		z-index 1
	&__item
		margin-bottom 15px
		background-color $white-color
		border-radius 9px
		box-shadow 0px 12px 30px rgba(0, 0, 0, 0.15)
		&:last-child
			margin-bottom 0
			
		&--title
			margin-right 25px
			transition color .17s ease-in-out
			
		&--header
			padding 30px 50px 30px 70px
			
		&--body
			padding 0 70px 85px 70px
			display none
			p
				margin-bottom 10px
				&:last-child
					margin-bottom 0
					
		&.is-toggled
			.faq
				&__item--header
					color $lighter-text-color
				&__btn
					&:after
						opacity 0
					&:before
						background-color $lighter-text-color
					
	&__btn
		width 26px
		height 26px
		display inline-block
		position relative
		flex none
		&:before,
		&:after
			pseudo()
			position absolute
			background-color $accent-color
			transition all .17s ease-in-out
			
		&:before
			width 100%
			height 4.88px
			left 0
			vertical-center()
			
			
		&:after
			height 100%
			width 4.88px
			top 0
			horisontal-center()
			
		&:hover
			&:before,
			&:after
				background-color $lighter-text-color

