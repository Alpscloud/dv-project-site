// Promo
.sect__promo
	min-height 640px
	padding 130px 0 90px
	
.title
	font 36px $Light
	line-height 125%
	margin-bottom 12px
	
.subtitle
	margin-bottom 22px
	

.promo
	position relative
	&__img
		position absolute
		left 0
		top -180px
		left -220px
		pointer-events none
		
	&__content
		width 55%
		padding-right 130px
	&__video
		flex 1
		max-width 560px
		text-align center
		&--wrapper
			width 100%
			height 340px
			box-shadow -15px 40px 55px rgba(0, 0, 0, 0.4)
			margin-bottom 60px
			iframe
				display block
				width 100%
				height 100%
				object-fit cover
				
		&--notice
			display inline-block
			position relative
			font-family $Italic
			padding-left 50px
			&:before
				pseudo()
				position absolute
				width 60px
				height 60px
				bg-img('../img/notice-arrow.svg', 60px, 60px)
				left 0
				top -45px
				
.commercial-proposal
	&__text
		font-family $Italic
		margin-bottom 35px
		line-height 19px
		
// Services
.sect__services
	position relative
	background-size 0 0
	overflow hidden
	&:before
		pseudo()
		position absolute
		top 0
		left -55%
		width 100%
		height 100%
		background-image inherit
		background-size cover
		background-position right center
		z-index 1
	&:after
		pseudo()
		position absolute
		top 0
		left -55%
		width 100%
		height 100%
		background-color rgba(#0C0C0C, 1)
	.container
		position relative
		z-index 1
	
.title__col
	max-width 400px
.services
	&__row
		margin-left -17.5px
		margin-right -17.5px
	&__col
		padding-top 55px
		padding-bottom 95px
		max-width 560px
.service
	&__item
		font-size 24px
		line-height 125%
		text-align center
		&--ic
			display block
			position absolute
			left 0
			bottom 0
			width 70px
			height 70px
			background-position 50% 50%
			background-repeat no-repeat
			background-size 70px 70px
			&-block
				width 100px
				height 100px
				margin 0 auto 35px auto
				border-radius 50%
				background-color rgba(206, 206, 206, 0.15)
				position relative
		&--wrapper
			width 50%
			padding 25px 17.5px
			
// Additional services
.sect__services-additional
	position relative
	z-index 1
	padding 110px 0
	&:before
		pseudo()
		position absolute
		height 525px
		width 100%
		background $accent-color url('../img/backgrounds/pattern-bg.png') 50% 50% no-repeat / cover
		left -50%
		top -50px
		z-index 1
	&:after
		pseudo()
		position absolute
		bottom 0
		width 100%
		left -55%
		height 50px
		background-color $white-color
	.container
		position relative
		z-index 1
		

.services-additional
	&__row
		.title__col
			max-width 420px
		
	&__col
		
		max-width 480px
		padding-right 45px
		
		.img-decor
			top -200px
			right -210px
			

.alarm-content
	font-size 20px
	line-height 150%
	h3,h4,h5,h6,p
		font-family $Med
		margin-bottom 15px
		
	ul
		li
			position relative
			padding-left 35px
			line-height 130%
			margin-bottom 20px
			font-size 16px
			&:last-child
				margin-bottom 0
			&:before
				pseudo()
				position absolute
				left 0
				top -1px
				width 20px
				height 20px	
				bg-img('../img/icons/svg/alert-ic.svg', 20px, 20px)
				
// Help
.sect__help
	padding 140px 0 190px
	
.help
	&__block
		max-width 540px
		position relative
		&--content
			position relative
			z-index 1
			p
				font-size 18px
				margin-bottom 35px
	&__img
		position absolute
		left 100%
		margin-left 245px
		width 623px
		height 417px
		vertical-center()
		z-index -1
		pointer-events none
		img 
			display block
			
	&__contacts
		margin-left 30px
		font-size 18px
		color $light-text-color
		&--links
			margin-left 20px
			font-size 0
			.btn-ic
				margin-right 20px
				&:last-child
					margin-right 0
					
// Guarantee
.sect__guarantee
	position relative
	z-index 1
.guarantee
	&__block
		position relative
		width 500px
		padding-right 130px
		padding-top 75px
		padding-bottom 120px
		
		
		img
			display block
			max-width 270px
			margin-bottom 20px
			
		p
			line-height 187%
	&__information
		position absolute
		left 100%
		z-index 1
		top 0
		width 800px
		padding 100px 155px 130px 100px
		&:before
			pseudo()
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba($dark-color, .8)
			
		&--content
			position relative
			z-index 1
			
		&--title
			font 24px $Med
			margin-bottom 30px
			
		&--item
			margin-bottom 25px
			display flex
			align-items flex-start
			justify-content flex-start
			flex-wrap nowrap
			
			h5
				font 20px $Med
				margin-bottom 10px
			p
				color $lighter-text-color
			&-ic
				display block
				flex none
				margin-right 35px
				width 50px
				height 50px
				background-repeat no-repeat
				background-size 50px 50px
				
			&:last-child
				margin-bottom 0
		
			