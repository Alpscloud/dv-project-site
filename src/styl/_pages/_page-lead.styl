.sect__promo-lead
	padding-top 25px
	padding-bottom 120px
	
	.breadcrumbs
		margin-bottom 140px
	
	.title
		font-size 45px
		line-height 60px
		span, b, strong
			color $accent-color
			margin-bottom 30px
	
.page-lead
	.clients
		margin-top 0
		
	.sect__licenses
		padding 115px 0
		
		.sect__title
			margin-bottom 40px
			
.licenses__slider--navigation
	display none

.promo-lead
	&__content
		max-width 580px
		position relative
		p
			color $light-text-color
			font 16px
			line-height 24px
			margin-bottom 40px
			max-width 550px
			span
				color $accent-color
				text-transform uppercase
				font-family $Bold
			b, strong, span
				font-family $Bold
				
		.btn
			position relative
			&:before
				pseudo()
				position absolute
				top 100%
				left 90px
				width 21px
				height 163px
				background url('../img/icons/svg/btn-arrow.svg') no-repeat / contain
				z-index 2
	&__img
		position absolute
		left 100%
		vertical-center()
		width 660px
		img
			display block
			width 660px
			

.sect__penalties
	position relative	
	&:before,
	&:after
		pseudo()
		position absolute	
		z-index -1
	&:before
		left 0
		bottom -115px
		width 241px
		height 334px
		background url('../img/const2.png') no-repeat / contain
	&:after
		right 0
		vertical-center()
		width 258px
		height 546px
		background url('../img/doc-flower.png') no-repeat / contain

.penalties-table
	margin-top 40px
	table
		width 100%
		font 16px $Reg
		border-collapse collapse
	thead
		tr
			border-color $dark-color
		td
			font-size 24px
	tr
		border-bottom 1px solid #E6E6E6
	td
		width 50%
		padding 30px
		vertical-align middle
		&:first-child
			border-right 1px solid #E6E6E6
		span
			color $accent-color
			
	&__notice
		color $accent-color
		margin-top 30px
		font 18px $Italic
		

.sect__form-lead
	.form__img
		width 465px
		height 406px
		transform none
		top auto
		bottom -80px
		left -350px
		
	.form__block
		flex none
		
	.contacts__block
		flex 1
		padding-right 60px
		max-width 100%


.sect__lead-benefits
	background #f1f1f1 url('../img/backgrounds/pattern-grey.svg') 50% no-repeat / cover
	


.lead-benefit
	&__img
		display flex
		align-items flex-end
		justify-content center
		height 250px
	&__text
		text-align center
		&--title
			font 45px $Light
			margin-bottom 20px
			position relative
			&:after
				content '+'
				display inline-block
				position absolute
				left 100%
				vertical-center()
				color $accent-color
				
	&__col
		&:nth-child(3)
			.lead-benefit__text--title
				&:after
					margin-left -20px
		
		&:last-child
			.lead-benefit__text--title
				&:after
					display none