// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1400px)
	.sect__promo-bg:before
		background linear-gradient(90deg,#fff 40%,rgba(196,196,196,0) 88.43%)
		
+max-screen(1100px)
	.sect__promo-bg
		width 100%
		height 250px
		top 0
		&:before
			background linear-gradient(360deg, #ffffff 38.45%, rgba(196, 196, 196, 0) 87.3%)
			right 0
			bottom -2px
			transform none
			top auto
	
	.custom-page	
		.promo__content
			max-width 100%
			

	.services-handling
		flex-wrap wrap
			
	.service-handling__wrapper
		width 33.3333%
		
	.fines-description
		flex none
		padding-right 0
		margin-right 0
		width 100%
		margin-bottom 64px
		&__row
			flex-wrap wrap
			justify-content center
			
	.fines-attention,
	.fines-solution__wrapper
		width 100%
		
	.technical-support
		padding-right 32px
		
	.pay-fines
		padding-left 400px
		&__img
			width 500px
		

+max-screen(992px)
	.pay-fines
		padding-left 0
		justify-content flex-start
		&__img
			width 350px
			left auto
			transform none
			right -80px
			top -115px
		&__offer
			.block-description
				max-width 75%
				
	.headache
		&-img
			display none
		&-content
			width 100%
		

+max-screen(767px)
	.service-handling__wrapper
		width 50%
		
	.technical-support
		margin-top 65px
		padding 63px 68px
		img
			width 250px
			right -60px
			top -70px
			transform none
			left auto
		
	.fines-solutions__block
		padding-bottom 63px
			
			

+max-screen(620px)
	
	.title-h3
		font-size 16px
		line-height 20.8px
		
		
	.sect__promo-bg
		height 150px
		&:before
			background linear-gradient(360deg, #ffffff 15%, rgba(196, 196, 196, 0) 87.3%)
	
	.custom-page
		font-size 14px
		line-height 18.2px
		.breadcrumbs
			display none
			
		.sect__promo
			padding-top 168px
			min-height auto
			padding-bottom 34px
			
		.sect__title
			font-size 24px
			line-height 31.2px
			
		.title
			font-size 24px
			line-height 31.2px
			margin-bottom 32px
			
		.marquiz__button
			font-size 14px
			padding-top 16px
			padding-bottom 16px
			
		.promo__content
			margin-bottom 0
			
	.gutters-sm
		padding 32px 0
		
	.gutter-top-sm
		padding-top 32px
	.gutter-bottom-sm
		padding-bottom 32px
			
	.promo-advantages
		flex-wrap wrap
		margin-bottom 103px
		
	.promo-advantage
		width 100%
		margin-bottom 16px
		display flex
		flex-wrap nowrap
		align-items center
		font-size 16px
		line-height 20.8px
		.ic-block
			margin-bottom 0
			margin-right 16px
			width 43px
			height 43px
		
		&:last-child
			margin-bottom 0
			
	.services-handling__img
		margin-bottom 25px
		width auto
		max-width 100%
		
	.services-handling
		margin-bottom 0
		

		
	.service-handling
		background-color transparent
		min-height auto
		padding 0
		&__title
			position relative
			padding-left 24px
			&:before
				pseudo()
				position absolute
				top 4px
				left 0
				width 8px
				height 8px
				border-radius 50%
				background-color $secondary-color
		&__wrapper
			width 100%
			margin-bottom 24px
			&:last-child
				margin-bottom 0
				
	.border-block
		padding-bottom 32px
		margin-bottom 32px
		border-color #E7E8E9
		&.no-mobile-border
			border none
			padding-bottom 0
			
		

	.fines-attention
		padding 32px
		font-size 14px
		line-height 18.2px
		img
			width 164px
			
		.title-h3
			max-width 110px
			
	.fines-description__row
		margin-bottom 77px
		
	.fines-solutions__block
		padding 32px
		color $secondary-light-text-color
		.sect__title
			br
				display none
		
	.fines-solution
		display flex
		align-items flex-start
		flex-wrap nowrap
		&__wrapper:last-child
			margin-bottom 0
		.ic-block
			margin-bottom 0
			flex none
			margin-right 17px
			width 40px
			height 40px
			
	.technical-support
		padding 16px
		margin-bottom 44px
		.sect__title
			max-width 185px
			margin-bottom 8px
		img
			width 135px
			right -25px
			top -15px
			
	.pay-fines
		&__img
			width 210px
			top -30px
			right -60px
		&__offer
			.block-description
				margin-bottom 16px
				max-width calc(100% - 150px)
			&-guaranties
				background-color transparent
				padding 0
				img
					display none
			
	
	

	.visible-mobile
		display block !important
		
	.hidden-mobile
		display none !important