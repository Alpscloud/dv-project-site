.footer
	background-color $footer-bg
	&__top
		padding 100px 0
	&__bottom
		padding 10px 0
		color $lighter-text-color
		font-size 14px
	

		&--nav
			margin-right 15px
			li
				display inline-block
				margin-right 15px
				&:last-child
					margin-right 0
					
			a
				color inherit
				text-decoration underline
				&:hover
					text-decoration none
	
	&__logo
		display flex
		justify-content flex-start
		align-items flex-start
		max-width 370px
		&--text
			&-title
				margin-bottom 15px
			p
				font-size 14px
				
	&__menus

		margin 0 50px
		
	&__menu
		margin-bottom 35px
		&--title
			margin-bottom 12px
		&:last-child
			margin-bottom 0
		li
			display block
			margin-bottom 12px
			&:last-child
				margin-bottom 0
		a
			color $accent-color
			text-decoration underline
			&:hover
				text-decoration none
				
	&__share
		&--title
			margin-bottom 20px
.copyright
	max-width 550px