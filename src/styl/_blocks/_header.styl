.header
	background-color $header-bg
	position relative

	&__top
		padding 10px 0
		
		&--info
			font-size 14px
			color #979797
			position relative
			padding-left 25px
			line-height 1
			
	&__nav
		margin-left 25px
		flex 1
	&__bottom
		height 63px
		background-color $white-color
		&.is-fixed
			position fixed
			z-index 10
			top 0
			left 0
			width 100%
		
	&__contacts
		background-color #F4F4F4
		padding 5px 20px
		display flex
		flex-direction column
		align-items flex-start
		justify-content center
		height 63px
		
	&-mobile
		&-info
			padding-left 30px
			margin-top 30px
			display none
			order 3
			
			p
				margin-bottom 12px
				&:last-child
					margin-bottom 0
					
		&-link
			display none
			font 14px $Reg
			color $dark-color
			
.mobile-phone
	display none