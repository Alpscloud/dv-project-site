.header
	background-color $header-bg
	position relative
	z-index 10
	&__top
		padding 10px 0
		
		&--info
			font-size 14px
			color #979797
			position relative
			padding-left 25px
			line-height 1
			
	&__nav
		margin-left 25px
		flex 1
	&__bottom
		height 63px
		
	&__contacts
		background-color #F4F4F4
		padding 5px 20px
		display flex
		flex-direction column
		align-items flex-start
		justify-content center
		height 63px
		
	&-mobile
		&-info
			position absolute
			bottom 0
			left 0
			padding 15px
			display none
			
			p
				margin-bottom 12px
				&:last-child
					margin-bottom 0
					
		&-link
			display none
			font 14px $Reg
			color $dark-color